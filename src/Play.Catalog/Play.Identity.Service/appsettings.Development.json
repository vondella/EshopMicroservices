{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "IdentityServerSettings": {
      "Clients": [
        {
          "ClientId": "postman",
          "AllowedGrantTypes": [
            "authorization_code"
          ],
          "RequiredClientSecret": false,
          "RedirectUris": [
            "urn:ietf:wg:oauth:2.0:oob"
          ],
          "AllowedScopes": [
            "openid"
          ]
        }
      ]
    }
  }
}
