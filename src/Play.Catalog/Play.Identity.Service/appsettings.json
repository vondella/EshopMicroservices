    "StartingGil": 100,
    "AdminUserPassword": "Pass@word1"
  },
  "MongoConfig": {
    "ConnectionString": "mongodb://localhost:27019",
    "Database": "Identity",
    "Collection": "items"
  },
  "AllowedOrigin": "http://localhost:3000",
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name": "catalog.fullaccess"
      },
      {
        "Name": "catalog.readaccess"
      },
      {
        "Name": "catalog.writeaccess"
      },
      {
        "Name": "inventory.fullaccess"
      },
      {
        "Name": "IdentityServerApi"
      },
      {
        "Name": "trading.fullaccess"
      }
    ],
    "ApiResources": [
      {
        "Name": "catalog",
        "Scopes": [
          "catalog.fullaccess",
          "catalog.readaccess",
          "catalog.writeaccess"
        ],
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "inventory",
        "Scopes": [
          "inventory.fullaccess"
        ],
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "Identity",
        "Scopes": [
          "IdentityServerApi"
        ],
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "trading",
        "Scopes": [
          "trading.fullaccess"
        ],
        "UserClaims": [
          "role"
        ]
      }
    ],

    "Clients": [
      {
        "ClientId": "frontend",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RedirectUris": [
          "http://localhost:3000"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "catalog.fullaccess",
          "catalog.writeaccess",
          "catalog.readaccess",
          "inventory.fullaccess",
          "identityServerApi",
          "roles"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true,
        "PostLogoutRedirectUris": [
          "http://ocalhost:300/authentication/logout"
        ]
      },

      {
        "ClientId": "postman",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RedirectUris": [
          "urn:ietf:wg:oauth:2.0:oob"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "catalog.fullaccess",
          "catalog.writeaccess",
          "catalog.readaccess",
          "inventory.fullaccess",
          "IdentityServerApi",
          "trading.fullaccess",
          "roles"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true
      }
    ]
  },
  "AllowedHosts": "*"

